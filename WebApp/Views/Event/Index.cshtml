@model IEnumerable<DisplayEventsDto>
@using System.Linq;

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/event.css" asp-append-version="true" />
}

@{
    var countAll = (ViewData["CountAll"] as int?) ?? 0;
    var countDraft = (ViewData["CountDraft"] as int?) ?? 0;
    var countActive = (ViewData["CountActive"] as int?) ?? 0;
    var countPast = (ViewData["CountPast"] as int?) ?? 0;

    var current = (ViewData["CurrentStatus"] as string) ?? "All";
    Func<EventStatus?, string> activeClass = status =>
    {
        var name = status?.ToString() ?? "All";
        return name == current ? "active-tab" : "";
    };
}

<nav class="status-tabs">
    <a asp-action="Index" class="@(activeClass(null))">All (@countAll)</a>
    <a asp-action="Index" asp-route-status="Draft" class="@(activeClass(EventStatus.Draft))">
        Draft (@countDraft)
    </a>
    <a asp-action="Index" asp-route-status="Active" class="@(activeClass(EventStatus.Active))">
        Active (@countActive)
    </a>
    <a asp-action="Index" asp-route-status="Past" class="@(activeClass(EventStatus.Past))">
        Past (@countPast)
    </a>
    <a asp-action="New" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Event
    </a>
</nav>

<div class="card-container">
    @foreach (var ev in Model)
    {
        var primaryTicket = ev.TicketTypes.FirstOrDefault();
        if (primaryTicket == null)
        {
            <div class="card-event">
                <p>No tickets available for @ev.EventName</p>
            </div>
            continue;
        }

        var soldPct = ev.TotalTickets > 0
        ? (int)(100 * (ev.TotalTickets - primaryTicket.TicketsLeft) / (double)ev.TotalTickets)
        : 0;

        <a asp-controller="Event"
           asp-action="Details"
           asp-route-id="@ev.Id"
           class="card-event-link">
            <div class="card-event">
                <img class="event-image"
                     src="~/images/event-placeholder.png"
                     alt="@ev.EventName" />

                <div class="event-main">
                    <div class="event-overview">
                        <span class="event-category">
                            @ev.Category.CategoryName
                        </span>
                        <h3 class="event-title">@ev.EventName</h3>
                        <p class="event-description">@ev.Description</p>
                    </div>

                    <div class="event-info-group">
                        <div class="event-location-time">
                            <strong>
                                @ev.Location.VenueName, @ev.Location.City
                            </strong><br />
                            @ev.StartDate.ToString("MMMM d, yyyy") ·
                            @ev.StartDate.ToString("HH:mm")<br />
                            Duration: @ev.DurationHours hours
                        </div>

                        <div class="event-stats">
                            <div class="event-sold">@soldPct% Sold</div>
                            <div class="event-left">
                                @primaryTicket.TicketsLeft Tickets Left
                            </div>
                        </div>

                        <div class="event-price">
                            $@primaryTicket.Price
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
