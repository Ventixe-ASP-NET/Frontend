@using WebApp.Views.Bookings.BookingModels
@model List<BookingWithEventModel>

<div class="bottom-stack">
    <!-- TOP: Filter + Search -->
    <div class="booking-controls-top">
        <div class="filter-group">
            <button class="filter-btn active">All</button>
            <button class="filter-btn">Confirmed</button>
            <button class="filter-btn">Pending</button>
            <button class="filter-btn">Cancelled</button>
        </div>

        <div class="search-and-dropdowns">
            <div class="search-input">
                <input type="text" placeholder="Search name, event, etc" />
                <span class="search-icon">🔍</span>
            </div>
            <select class="dropdown-select">
                <option>All Category</option>
                <option>Music</option>
                <option>Sport</option>
                <option>Art</option>
            </select>
            <select class="dropdown-select">
                <option>This Month</option>
                <option>Last Month</option>
                <option>Custom</option>
            </select>
        </div>
    </div>

    <!-- MIDDLE: Table -->
    <div class="booking-table-container">
        <table class="booking-table">
            <thead>
                <tr>
                    <th>Invoice ID</th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Event</th>
                    <th>Ticket Category</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>E-Voucher</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.InvoiceId</td>
                        <td>
                            <div class="main">@booking.CreatedAt.ToString("yyyy/MM/dd")</div>
                            <div class="sub">@booking.CreatedAt.ToString("hh:mm tt")</div>
                        </td>
                        <td>@booking.BookingName</td>
                        <td>
                            <div class="main">@booking.EventName</div>
                            <div class="sub">@booking.Category ?? "Unknown"</div>
                        </td>
                        <td><span class="badge badge-diamond">–</span></td> <!-- placeholder -->
                        <td>–</td>
                        <td>–</td>
                        <td>–</td>
                        <td><span class="status confirmed">Confirmed</span></td>
                        <td>–</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- BOTTOM: Pagination -->
    <div class="booking-pagination">
        <p>Showing 1–8 of 312</p>
        <a href="/Bookings/Create" class="btn btn-primary">Create Booking</a>
        <div class="pagination-buttons">
            <button>←</button>
            <button class="active">1</button>
            <button>2</button>
            <button>3</button>
            <button>→</button>
        </div>
    </div>
</div>
