<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @(!string.IsNullOrEmpty(ViewData["Title"]?.ToString())
            ? $"{ViewData["Title"]} - Ventixe"
            : "Ventixe")
    </title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,300,0,0&icon_names=check_box,grid_view,login,logout,menu&display=block" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="wrapper">
        <partial name="Partials/_SidebarPartial" />
        <partial name="Partials/_HeaderPartial" />
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
