@model SignUpEmailViewModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="form-wrapper">
    <h1>@ViewData["Title"]</h1>

    <form method="post" asp-controller="Auth" asp-action="HandleSignUpEmail" novalidate>
        <div class="form-input-wrapper">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <p class="error-message">@ViewBag?.ErrorMessage</p>
        }

        <input type="submit" class="btn btn-primary" value="Sign up" />

        <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in</a></p>
    </form>
</div>